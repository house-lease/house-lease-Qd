
<!-- 自定义组件 -->
<view>
	<searcher></searcher>
</view>
<!-- 轮播图 -->
<view class="lunBo">
	<swiper indicator-dots="true" autoplay="true" interval="3000" duration="500">
		<swiper-item>
			<navigator url="/pages/particulars/particulars">
				<image src="{{images[0]}}" />
			</navigator>
		</swiper-item>
		<swiper-item>
			<navigator>
				<image src="{{images[1]}}" />
			</navigator>
		</swiper-item>
	</swiper>
</view>

<!-- 条件按钮 -->
<view class="anNiu">
	<view class="heZu">
		<image class="he" src="/pages/image/hz.png"></image>
		<view class="t">合租</view>
	</view>
	<view class="zhengZu">
		<image class="he" src="/pages/image/zz.png"></image>
		<view class="t">整租</view>
	</view>
	<view class="paiHang">
		<image class="he" src="/pages/image/ph.png"></image>
		<view class="t">排行</view>
	</view>
</view>
<view class="container">
	<!-- 分割线 -->
	<view class="divLine"></view>
</view>
<!-- 条件筛选框 -->
<view class="tiaoJian">
	<view class="t1">时间<image class="i1" src="/pages/image/xl.png"></image>
	</view>
	<view class="t2">类型<image class="i2" src="/pages/image/xl.png"></image>
	</view>
	<view class="t3">位置<image class="i3" src="/pages/image/xl.png"></image>
	</view>
	<view class="t4">价格<image class="i4" src="/pages/image/xl.png"></image>
	</view>
</view>

<view wx:for="{{houses}}" wx:key="id" wx:for-index="idx" wx:for-item="value">
	<view class="lists">
		<view class="tu">
			<navigator url="/pages/particulars/particulars">
				<image src="{{value.image}}"></image>
			</navigator>
		</view>
		<view class="message">
			<navigator url="/pages/particulars/particulars">
				<view>{{value.houseName}}</view>
				<view>{{value.houseType}}</view>
				<view>{{value.price}}</view>
				<view>{{value.address}} </view>
			</navigator>
		</view>
	</view>
</view>