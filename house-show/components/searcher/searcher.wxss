.zhu{
  width: 80%;
  border: 1px solid rgba(192,192,192);
  margin-left:40rpx;
  padding: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(192,192,192);
}
.weiZhi,.souSuo{
  display: inline-block;
}
.weiZhi{
  font-size: 24rpx;
  padding-right: 40rpx;
  border-right: 1px solid rgba(192,192,192);
}
/* 下拉图标 */
