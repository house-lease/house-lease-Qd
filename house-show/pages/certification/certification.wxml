<!--pages/certification/certification.wxml-->
<view class="background">
<!-- 真实信息 -->
<view class="realinformation">
<view class="mation">申请房东认证，需要支付1000元押金，请确保余额充足</view>
</view>

<!-- 姓名 -->
<view class="informationname"> 
<text class="name" >姓名:{{user.userName}}</text>
</view>


<!-- 手机号 -->
<view class="informationnumber">
<text class="number" >手机号:{{user.phone}}</text>
</view> 

<!-- 选择图片 -->
<view class="img">    
<view>
<button class="clink" bindtap="takePhoto">点击选择上传图</button>
</view>
<image src='{{image}}' style='width:100%; height:600rpx' />
</view>


<!-- 提交按钮 -->
<view class="submitnumber">
<button bindtap="uploadImage" class="submit">提交</button>
</view>


</view>